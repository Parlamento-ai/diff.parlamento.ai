          <aknpp:voter href="/poc/persona/senador-baiano" showAs="Sen. Baiano"/>
          <aknpp:voter href="/poc/persona/senadora-nordestina" showAs="Sen. Nordestina"/>
          <aknpp:voter href="/poc/persona/senadora-mineira" showAs="Sen. Mineira"/>
          <aknpp:voter href="/poc/persona/senador-goiano" showAs="Sen. Goiano"/>
        </aknpp:for>
        <aknpp:against>
          <aknpp:voter href="/poc/persona/senadora-paulista" showAs="Sen. Paulista"/>
          <aknpp:voter href="/poc/persona/senadora-amazonica" showAs="Sen. Amazónica"/>
        </aknpp:against>
        <aknpp:abstain/>
      </aknpp:vote>

      <!-- art_4: restaurar oreja y rabo como obligatorios -->
      <aknpp:articleChange article="art_4" type="substitute">
        <aknpp:old>Costilla de cerdo ahumada, linguiça calabresa ou paio y carne seca (charque). Todos deben ser previamente desalados durante 24 horas.</aknpp:old>
        <aknpp:new>Costilla de cerdo ahumada, oreja de cerdo, rabo de cerdo, linguiça calabresa ou paio y carne seca (charque). Todos deben ser previamente desalados durante 24 horas.</aknpp:new>
      </aknpp:articleChange>

    </aknpp:changeSet>

  </amendment>
